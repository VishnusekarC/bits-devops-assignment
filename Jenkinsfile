/* Requires the Docker Pipeline plugin */
pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'Running Build'
            }
        }

        stage('test') {
            steps {
                echo 'Running Tests'
            }
        }

        stage('deploy') {
            steps {
                echo 'Running Deployment'
            }
        }
    }
}